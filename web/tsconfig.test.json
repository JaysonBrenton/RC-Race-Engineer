{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "./.tmp/test-dist",
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ES2020",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "typeRoots": ["./types"],
    "types": ["custom-node"],
    "jsx": "react-jsx",
    "paths": {
      "@/*": ["./src/*"],
      "@prisma/client": ["./src/stubs/prisma-client"],
      "next/server": ["./test/stubs/next-server"]
    }
  },
  "include": [
    "src/app/_components/ToastProvider.tsx",
    "src/core/**/*.ts",
    "src/core/**/*.tsx",
    "src/stubs/**/*.d.ts",
    "test/**/*.ts",
    "test/**/*.tsx"
  ],
  "exclude": ["node_modules"]
}
